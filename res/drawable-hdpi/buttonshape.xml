<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
			<corners
			android:radius="10dp"
			/>
			<gradient
			android:angle="45"
			android:startColor="#DF212121"
			android:endColor="#BF7A7A7A"
			android:type="linear"
			/>
			<padding
			android:left="0dp"
			android:top="0dp"
			android:right="0dp"
			android:bottom="0dp"
			/>
			<size
			android:width="100dp"
			android:height="50dp"
			/>
			<stroke
			android:width="2dp"
			android:color="#FFFFFF"
			/>
		</shape>
	</item>
    <item>
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
			<corners
			android:radius="10dp"
			/>
			<gradient
			android:angle="45"
			android:startColor="#212121"
			android:endColor="#7A7A7A"
			android:type="linear"
			/>
			<padding
			android:left="0dp"
			android:top="0dp"
			android:right="0dp"
			android:bottom="0dp"
			/>
			<size
			android:width="100dp"
			android:height="50dp"
			/>
			<stroke
			android:width="1dp"
			android:color="#8F8F8F"
			/>
		</shape>
	</item>
</selector>
	